<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="EntryTitle" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:textColor">#670133</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="EntryPreview" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="EntryPublicationDate" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">left|bottom</item>
		<item name="android:layout_gravity">left|bottom</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="EntryAuthor" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
		<item name="android:gravity">left|bottom</item>
		<item name="android:layout_gravity">left|bottom</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#670133</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EntryRowTitle" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">6sp</item>
        <item name="android:textColor">#670133</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EntryRowTitleTwoPane" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">10sp</item>
        <item name="android:textColor">#670133</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RowNoEntry" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#670133</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionBarButton" parent="@android:style/Widget.ActionButton">
    </style>
</resources>
